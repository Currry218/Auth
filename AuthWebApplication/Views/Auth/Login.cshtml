@{
  ViewBag.Nav = "Guest";
  Layout = "_Layout";
  ViewData["Title"] = "Login";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
  <div class="card shadow-lg p-4" style="width: 420px; border-radius: 20px;">
    <h3 class="text-center mb-4 fw-bold">Đăng nhập</h3>

    <form id="login-form">
      <div class="mb-3">
        <label class="form-label fw-semibold">Tên đăng nhập</label>
        <input value="admin" type="text" name="loginname" class="form-control" placeholder="Username hoặc Email"
          required>
      </div>

      <div class="mb-2">
        <label class="form-label fw-semibold">Mật khẩu</label>

        <div class="input-group">
          <input value="123" type="password" id="password" name="password" class="form-control" required>
          <button class="btn btn-outline-secondary bi bi-eye-slash togglePassword" type="button" id="togglePassword"></button>
        </div>
      </div>

      <div class="d-flex justify-content-end mb-4">
        <a href="#" class="text-decoration-none" data-bs-toggle="modal" data-bs-target="#forgotModal">
          Quên mật khẩu?
        </a>
      </div>

      <button type="submit" class="btn btn-dark w-100 btn-lg mb-3" id="login-button">
        Đăng nhập
      </button>
    </form>

    <p class="text-center mb-3">
      Chưa có tài khoản?
      <a href="/auth/register" class="fw-bold text-decoration-none">Đăng ký</a>
    </p>

    <div class="text-center">
      <span class="text-muted">Hoặc đăng nhập với</span>
      <div class="mt-2">
        <button class="btn btn-outline-primary btn-lg rounded-circle mx-1">
          <i class="bi bi-facebook"></i>
        </button>
        <button class="btn btn-outline-danger btn-lg rounded-circle mx-1">
          <i class="bi bi-google"></i>
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Forgot Password Modal -->
<div class="modal fade" id="forgotModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-sm">
    <div class="modal-content">

      <form action="/Auth/ForgotPassword" method="POST" id="send-mail-form">

        <div class="modal-header border-0">
          <h5 class="modal-title fw-semibold">Quên mật khẩu</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <label class="form-label fw-semibold">Nhập Username hoặc Email</label>
          <input type="text" name="account" class="form-control" placeholder="Username hoặc Email" required>
        </div>

        <div class="modal-footer border-0">
          <button type="submit" class="btn btn-dark w-100" id="send-mail-button">Gửi OTP</button>
        </div>

      </form>
      
      <form action="/Auth/VerifyOTP" method="POST" id="otp-form" style="display:none;">

        <div class="modal-header border-0">
          <h5 class="modal-title fw-semibold">Nhập OTP</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <label class="form-label fw-semibold">OTP đã được gửi về mail của bạn</label>
          <input type="number" name="OTP" class="form-control" placeholder="" maxlength="6" required>
          <input type="text" name="account" id="account-otp" class="form-control" placeholder="Username hoặc Email" hidden>
        </div>

        <div class="modal-footer border-0">
          <button type="submit" class="btn btn-dark w-100">Xác nhận</button>
        </div>

      </form>
    </div>
  </div>
</div>

<script>
  // Toggle password visibility
  const togglePassword = document.getElementById("togglePassword");
  togglePassword.addEventListener("click", () => {
    const passwordInput = document.getElementById("password");
    const isHidden = passwordInput.type === "password";

    passwordInput.type = isHidden ? "text" : "password";
    togglePassword.classList.toggle("bi-eye");
    togglePassword.classList.toggle("bi-eye-slash");
  });

  // Login using JS fetch
  document.getElementById("login-form").addEventListener("submit", function (e) {
    e.preventDefault();

    const btn = document.getElementById("login-button");
    btn.disabled = true;

    const data = new FormData(this);

    fetch('/Auth/Login', {
      method: 'POST',
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        loginname: data.get("loginname"),
        password: data.get("password")
      })
    })
      .then(async response => {
        if (!response.ok) throw new Error(await response.text());
        return response.json();
      })
      .then(result => {
        window.location.replace("/Home/Index");
      })
      .catch(err => {
        console.error("Login error:", err.message);
      })
      .finally(() => {
        btn.disabled = false;
      });
  });
  
  document.getElementById("send-mail-form").addEventListener("submit", function (e) {
    e.preventDefault();

    const btn = document.getElementById("send-mail-button");
    btn.disabled = true;

    const data = new FormData(this);

    // Send as multipart/form-data so model binding can read form fields
    fetch('/Auth/ForgotPassword', {
      method: 'POST',
      body: data
    })
      .then(async response => {
        if (!response.ok) throw new Error(await response.text());
        const ct = response.headers.get('content-type') || '';
        return ct.includes('application/json') ? response.json() : response.text();
      })
      .then(result => {
        this.style.display = "none";
        document.getElementById("otp-form").style.display = "block";
        document.getElementById("account-otp").value = data.get("account");
     })
      .catch(err => {
        console.error("Send OTP error:", err.message);
      })
      .finally(() => {
        btn.disabled = false;
      });
  });
  
</script>