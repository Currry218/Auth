@{
  Layout = "_GuestLayout";
}
<div class="vh-100 d-flex align-items-center justify-content-center bg-light">
  <div class="card shadow-lg p-4" style="width: 420px; border-radius: 20px;">
    <h3 class="text-center mb-4 fw-bold">Đăng nhập</h3>

    <form method="POST" action="/Auth/Login">
      <div class="mb-3">
        <label for="login-name" class="form-label fw-semibold">Tên đăng nhập</label>
        <input type="text" id="loginname" name="loginname" class="form-control form-control-lg"
          placeholder="Username hoặc Email" required>
      </div>

      <div class="mb-2">
        <label class="form-label fw-semibold">Mật khẩu</label>
        <input type="password" id="password" name="password" class="form-control form-control-lg" required>
      </div>

      <div class="d-flex justify-content-between mb-4">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="remember" checked>
          <label class="form-check-label" for="remember">Ghi nhớ</label>
        </div>
        <a href="#" class="text-primary text-decoration-none">Quên mật khẩu?</a>
      </div>

      <button type="submit" class="btn btn-primary w-100 btn-lg mb-3">Đăng nhập</button>
    </form>

    <p class="text-center mb-2">Chưa có tài khoản?
      <a href="/auth/register" class="text-primary fw-bold text-decoration-none">Đăng ký</a>
    </p>

    <div class="text-center">
      <span class="text-muted">Hoặc đăng nhập với</span>
      <div class="mt-2">
        <button class="btn btn-outline-primary btn-lg rounded-circle mx-1">
          <i class="bi bi-facebook"></i>
        </button>
        <button class="btn btn-outline-danger btn-lg rounded-circle mx-1">
          <i class="bi bi-google"></i>
        </button>
      </div>
    </div>

  </div>
</div>