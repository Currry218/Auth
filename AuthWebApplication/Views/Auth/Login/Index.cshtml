@{
  ViewBag.Nav = "Guest";
  Layout = "_Layout";
  ViewData["Title"] = "Login";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center ">
  <div class="card shadow p-4 my-2" style="width: 420px; border-radius: 20px;">
    <h3 class="text-center mb-4 fw-bold">Đăng nhập</h3>
    @if (@ViewBag.Message != null)
    {
      <div class="text-center alert alert-primary ">@ViewBag.Message</div>

    }

    <form id="login-form">
      <div class="mb-3">
        <label class="form-label fw-semibold">Tên đăng nhập</label>
        <input type="text" name="loginname" class="form-control" placeholder="Username hoặc Email" required>
      </div>

      <div class="mb-2">
        <label class="form-label fw-semibold">Mật khẩu</label>

        <div class="input-group">
          <input type="password" id="password" name="password" class="form-control" required>
          <button class="btn btn-outline-secondary bi bi-eye-slash togglePassword" type="button"
            id="togglePassword"></button>
        </div>
      </div>

      <div class="d-flex justify-content-end mb-4">
        <a href="#" class="text-decoration-none" data-bs-toggle="modal" data-bs-target="#forgotModal">
          Quên mật khẩu?
        </a>
      </div>

      <button type="submit" class="btn btn-dark w-100 btn-lg mb-3 d-flex justify-content-center" id="login-button">
        Đăng nhập
      </button>
    </form>

    <p class="text-center mb-3">
      Chưa có tài khoản?
      <a href="/auth/register" class="fw-bold text-decoration-none text-black">Đăng ký</a>
    </p>

    <div class="text-center">
      <span class="text-muted">Hoặc đăng nhập với</span>
      <div class="mt-2">
        <button class="btn btn-outline-primary btn-lg rounded-circle mx-1 bi bi-facebook">
        </button>
        <button class="btn btn-outline-danger btn-lg rounded-circle bi bi-google">
        </button>
      </div>
    </div>
  </div>
</div>

@await Html.PartialAsync("SendEmailReset.cshtml")

<script>
  // Toggle password visibility
  const togglePassword = document.getElementById("togglePassword");
  togglePassword.addEventListener("click", () => {
    const passwordInput = document.getElementById("password");
    const isHidden = passwordInput.type === "password";

    passwordInput.type = isHidden ? "text" : "password";
    togglePassword.classList.toggle("bi-eye");
    togglePassword.classList.toggle("bi-eye-slash");
  });

  document.getElementById("login-form").addEventListener("submit", function (e) {
    e.preventDefault();

    const btn = document.getElementById("login-button");
    btn.disabled = true;
    btn.innerHTML = "<div class='spinner-border' role='status'> </div>";
    const data = new FormData(this);

    fetch('/Auth/Login', {
      method: 'POST',
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        loginname: data.get("loginname"),
        password: data.get("password")
      })
    })
      .then(async response => {

        if (!response.ok) {
          const err = await response.json();
          throw new Error(err.message);
        }
        return response.json();
      })
      .then(result => {
        window.location.replace("/Home/Index");
      })
      .catch(err => {
        console.log(err)
        toast({
          message: err.message || err,
          type: "error",
        });
      })
      .finally(() => {
        btn.disabled = false;
        btn.innerHTML = null;
        btn.innerText = "Đăng nhập";
      });
  });  
</script>